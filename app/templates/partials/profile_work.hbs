{{#unless onBoardingProcess}}
<div class="row schedule-info">
  <div class="col-sm-3 description">
    <p>Describe your job</p>
    <p class="dim">How would you describe your work to a friend in one or two sentences?</p>
  </div>
  <div class="col-sm-4">
    {{view 'restrictedtextarea' value=freeTextJob class="form-control" placeholder="Enter your job description here" id="freeTextJob" cols="80" rows="5" maxlength="200"}}
  </div>
</div>
{{/unless}}
<div class="row schedule-info">
  <div class="col-sm-2 col-sm-offset-3">
    <button class="btn btn-lg btn-primary" {{bind-attr disabled=disableAbout}} {{action 'about'}}>{{#if onBoardingProcess}}Next{{else}}Submit{{/if}}</button>
  </div>
</div>