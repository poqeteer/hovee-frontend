<div class="row schedule-info">
  <div class="col-sm-9 col-sm-offset-3">
    <h2>Your Work</h2>
  </div>
</div>
<div class="row schedule-info">
  <div class="col-sm-3 description">
    Your Company{{#unless company}} *</p>
    <p class="dim">We need you company name. (Must be at least 3 letters)</p>{{/unless}}
  </div>
  <div class="col-sm-4" style="font-size: 1.1em;">
    {{#if company.largeLogoUrl}}
      <img {{bind-attr src="company.largeLogoUrl"}} class="companyLogo" alt="{{unbound company.name}}">
    {{else}}
      {{#if company}}
        <div class="companyName" style="padding-top: 5px;">{{company.name}}</div>
      {{else}}
        {{view "restrictedinput" value=companyName class="form-control" placeholder="Your company name" maxlength=64}}
    {{/if}}
  {{/if}}
  </div>
</div>

{{#view 'jobheadline'}}
<div class="row schedule-info">
  <div class="col-sm-3 description">
    Your job title at {{company.name}} *
  </div>
  <div class="col-sm-5 form-group">
    {{view "helpfulinput" value=jobHeadline class="form-control" placeholder="Enter your job title here" id="headline" hintText="We get your title from LinkedIn, but you can change it here if you like." maxLength=64}}
    <p class="help-block"></p>
  </div>
</div>
{{/view}}
