<div {{bind-attr class="controllers.login.onDesktop:lowerArea controllers.login.onDesktop:container"}} style="height: 100%; padding-top: {{unbound matchesListStyle}}">
  {{#if displayMap}}
    <div {{bind-attr style=mapStyle}}>
      <div id="map_recommendations" style="width: 100%; height: 100%; background-color: silver;">
        <div style="width: 100%; height: 100%; padding-top:20px; text-align: center; color: #ffffff; text-shadow: #808080;"><h2>Loading...</h2></div>
      </div>
    </div>
  {{else}}
    <div id="topOfList" class="restrict" style="height: 10px"></div>
    <!-- main area that contains cards -->
    {{#each trip in selectedDay.trips}}
      {{partial 'partials/rides_trip_card'}}
    {{/each}}
    {{#if selectedDay.trips}}
      <div class="restrict row" style="height: 50px; padding-left: 15px; color: #86817F; font-weight: 300; font-size: 1.3em; line-height: 50px; background: #F4F8F9; margin: -14px auto;">
        {{passengersOrDrivers}}
      </div>
      <div class="restrict row horz-border" style="height: 15px; margin: 14px auto 0;"></div>
    {{/if}}
    {{#each recommendation in filteredRecommendations}}
      {{partial 'partials/rides_recommendation_card'}}
    {{/each}}
