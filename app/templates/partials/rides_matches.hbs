  <div class="restrict" style="background-color: #F4F8F9; height: 50px; padding-top: 5px; padding-right: 5px;">
    <div class="pull-left" style="padding-left: 15px; color: #A5A6A8; font-weight: 400; font-size: 1.1em; line-height: 40px;">
      <a {{action 'scrollToTop'}} style="cursor: pointer;">
    {{#unless selectedDay.trips}}
      {{passengersOrDrivers}}
    {{else}}
      {{inviteCount}} Invites/{{passengersOrDrivers}}
    {{/unless}}
        </a>
