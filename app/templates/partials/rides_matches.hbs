      <button class="btn btn-default" style="height: 41px;width: 41px;line-height: 1.1em;font-size: 1.1em;" {{action 'displayOptions'}}><i class="fa fa-gear"></i></button>
    </div>
    <div class="pull-right" style="width: 75px; height: 40px;">
      <div class="radioSelectorContainer" style="width: 75px; padding: 0;">
        <div class="btn-group radioSelector">
          <label id="listl" for="rmList"  class="btn btn-default active" data-placement="bottom" {{action 'toggleTwoButtons' 'listMapMode' 'list' '#listl' '#mapl'}}>
            <span id="rmList"><i class="fa fa-list-ul"></i></span>
          </label>
          <span style="width: 1px"></span>
          <label id="mapl" for="rmMap"  class="btn btn-default" data-placement="bottom" {{action 'toggleTwoButtons' 'listMapMode' 'map' '#mapl' '#listl'}}>
            <span id="rmMap"><i class="fa fa-map-marker"></i></span>
          </label>
        </div>
