<table class="card-table">
  <tr>
    <td style="padding: 5px 5px 0 5px;">
      <a {{action 'profilePartner'}}>
        <img {{bind-attr src='partner.profilePhotoUrl'}} onerror="this.onerror=null;this.src='//hovee001.s3.amazonaws.com/profile_images/default.jpg'"  class="profilePic" width="75">
      </a>
    </td>
    <td style="padding-right: 5px;">
      <p><span style="font-size: 1.25em; font-weight: bold;">
        {{partner.fullName}}
      </span></p>
      {{partner.jobHeadline}}<br>
      {{partner.company.name}}
    </td>
  </tr>
  <tr>
    <td colspan="2">
      <table style="width: 100%;">
        <tr>
          <td style="text-align: right; padding-right: 5px;">Your Home<br>{{homeDepartureTime}}</td>
          <td>
            <img src="//hovee001.s3.amazonaws.com/resources/circle-home.gif" width="30">
          </td>
          <td style="padding-right: 5px; padding-left: 5px;">
            {{matchTwo.memberHomeLocation.homeAddress.street}}<br>
            {{matchTwo.memberHomeLocation.homeAddress.city}}
          </td>
        </tr>
        <tr><td></td><td style="width: 30px; text-align: center;font-weight: 900; color: grey;"><i class="fa fa-ellipsis-v"></i></td><td></td></tr>
        <tr>
          <td style="text-align: right; padding-right: 5px;">{{partner.firstName}} Home<br>{{passengerHomePickupTime}}</td>
          <td>
            <img src="//hovee001.s3.amazonaws.com/resources/circle-home.gif" width="30">
          </td>
          <td style="padding-right: 5px; padding-left: 5px;">
            {{matchTwo.riderHomeLocation.homeAddress.street}}<br>
            {{matchTwo.riderHomeLocation.homeAddress.city}}
          </td>
        </tr>
        <tr><td></td><td style="width: 30px; text-align: center;font-weight: 900; color: grey;"><i class="fa fa-ellipsis-v"></i></td><td></td></tr>
        <tr>
          <td style="text-align: right; padding-right: 5px;">{{partner.firstName}} Work<br>{{passengerWorkDestTime}}</td>
          <td>
            <img src="//hovee001.s3.amazonaws.com/resources/circle-work.gif" width="30">
          </td>
          <td style="padding-right: 5px; padding-left: 5px;">
            {{matchTwo.riderWorkLocation.workAddress.street}}<br>
            {{matchTwo.riderWorkLocation.workAddress.city}}
          </td>
        </tr>
        <tr><td></td><td style="width: 30px; text-align: center;font-weight: 900; color: grey;"><i class="fa fa-ellipsis-v"></i></td><td></td></tr>
        <tr>
          <td style="text-align: right; padding-right: 5px;">Your Work<br>{{driverWorkDestTime}}</td>
          <td>
            <img src="//hovee001.s3.amazonaws.com/resources/circle-work.gif" width="30">
          </td>
          <td style="padding-right: 5px; padding-left: 5px; padding-bottom: 5px;">
            {{matchTwo.memberWorkLocation.workAddress.street}}<br>
            {{matchTwo.memberWorkLocation.workAddress.city}}
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td style="text-align: center; padding-bottom: 5px;" colspan="2">
    <span class="bigNumber">{{#unless matchTwo.deflectMiles}}0{{else}}{{matchTwo.deflectMiles}}</span> Mile{{matchTwo.deflectMilesNounSuffix}}{{/unless}}<br>
      <span style="font-size: .8em; font-weight: 700; color: grey;">out of your way</span>
    </td>
  </tr>
</table>
<br>
